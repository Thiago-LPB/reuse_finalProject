<%- include("partials/headerLogin.ejs") %>

<!-- Header Section -->
<header class="bg-dark py-4 text-white">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-8">
        <h1 class="display-4 fw-bold">Welcome back <%= User.slice(0, User.indexOf("@")) %>!</h1>
      </div>
      <div class="col-md-4 text-md-end">
        <a href="/recommendations" class="btn btn-warning btn-lg">
          <i class="bi bi-star-fill"></i> Your Recommendations
        </a>
      </div>
    </div>
  </div>
</header>

<!-- Popular Games Section -->
<section class="py-5">
  <div class="container px-4 px-lg-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bolder mb-0">
        <i class="bi bi-fire text-danger"></i> Popular Games
      </h2>
      <a href="/games" class="btn btn-outline-primary">
        Browse All Games <i class="bi bi-arrow-right"></i>
      </a>
    </div>
    
        
    <!-- Quick Links -->
    <div class="row mt-5">
      <div class="col-md-4 mb-3">
        <div class="card bg-primary text-white h-100">
          <div class="card-body text-center">
            <i class="bi bi-grid-3x3-gap-fill" style="font-size: 3rem;"></i>
            <h4 class="mt-3">Browse Catalog</h4>
            <p>Explore our complete collection of games</p>
            <a href="/games" class="btn btn-light">Browse Now</a>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-3">
        <div class="card bg-warning text-dark h-100">
          <div class="card-body text-center">
            <i class="bi bi-star-fill" style="font-size: 3rem;"></i>
            <h4 class="mt-3">For You</h4>
            <p>Personalized game recommendations</p>
            <a href="/recommendations" class="btn btn-dark">Get Recommendations</a>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-3">
        <div class="card bg-success text-white h-100">
          <div class="card-body text-center">
            <i class="bi bi-collection-fill" style="font-size: 3rem;"></i>
            <h4 class="mt-3">My Collection</h4>
            <p>View your owned games</p>
            <form action="/mygames" method="POST" style="display:inline;">
              <input type="hidden" name="loggedUser" value="<%= User %>">
              <button type="submit" class="btn btn-light">View Collection</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include("partials/footer.ejs") %>
