<%- include("partials/headerLogin.ejs") %>

<section class="py-5" style="background-color: #f5f6fa; min-height: 100vh;">
  <div class="container py-4">
    <div class="row justify-content-center">

      <!-- COLUNA PRINCIPAL -->
      <div class="col-lg-8">
        <div class="card shadow-sm border-0 rounded-4 mb-4">
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h2 class="fw-bold text-dark mb-0">ðŸ›’ Your Cart</h2>
              <span class="badge bg-secondary fs-6">Items: <%= cart.length %></span>
            </div>

<% if (cart.length > 0) { %>
  <% for (let Cart of cart) { %>
    <div class="row align-items-center border-bottom py-3">
      <div class="col-md-2 col-4">
        <img src="<%= Cart.img %>" class="img-fluid rounded-3 shadow-sm" alt="<%= Cart.name %>">
      </div>
      <div class="col-md-6 col-8">
        <h5 class="mb-1 fw-semibold"><%= Cart.name %></h5>
        <p class="text-muted small mb-0">Digital Game</p>
      </div>
      <div class="col-md-3 col-8 text-md-end mt-2 mt-md-0">
        <h5 class="fw-bold text-success mb-0">$<%= Cart.price %></h5>
      </div>
      <div class="col-md-1 col-4 text-end">
        <form action="/cart/remove/<%= Cart.id %>" method="POST" onsubmit="return confirm('Remove this item?');">
          <button type="submit" class="btn btn-sm btn-outline-danger shadow-sm">
            <i class="fas fa-trash-alt"></i>
          </button>
        </form>
      </div>
    </div>
  <% } %>
<% } else { %>
  <div class="text-center py-5">
    <h3 class="fw-bold text-muted">Your cart is empty</h3>
    <a href="/" class="btn btn-outline-dark mt-3">
      <i class="fas fa-long-arrow-alt-left me-2"></i>Back to shop
    </a>
  </div>
<% } %>

            <% if (cart.length > 0) { %>
              <div class="pt-4">
                <a href="/" class="text-decoration-none">
                  <i class="fas fa-long-arrow-alt-left me-2"></i>Continue shopping
                </a>
              </div>
            <% } %>
          </div>
        </div>
      </div>

      <!-- SIDEBAR DE RESUMO -->
      <div class="col-lg-4">
        <div class="card border-0 shadow-lg rounded-4 sticky-top" style="top: 90px;">
          <div class="card-body p-4">

            <h3 class="fw-bold mb-4 text-dark">Order Summary</h3>
            <hr>

            <div class="d-flex justify-content-between mb-3">
              <span class="fw-semibold">Items</span>
              <span><%= cart.length %></span>
            </div>

            <div class="d-flex justify-content-between mb-3">
              <span class="fw-semibold">Account Balance</span>
              <span class="text-primary fw-bold">$<%= money %></span>
            </div>

            <hr>

            <div class="d-flex justify-content-between align-items-center mb-4">
              <h5 class="fw-bold mb-0">Total:</h5>
              <h4 class="fw-bold text-success mb-0">$<%= cartPrice %></h4>
            </div>

            <% if (locals.message) { %>
              <div class="alert alert-success rounded-3"><i class="fas fa-check-circle me-2"></i><%= message %></div>
            <% } %>

            <% if (locals.error) { %>
              <div class="alert alert-danger rounded-3"><i class="fas fa-exclamation-triangle me-2"></i><%= error %></div>
            <% } %>

            <% if (cart.length > 0) { %>
              <form action="/cart/checkout" method="POST">
                <button type="submit" class="btn btn-dark btn-lg w-100 fw-bold shadow-sm">
                  <i class="fas fa-credit-card me-2"></i>Buy Now
                </button>
              </form>
            <% } %>

          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<%- include("partials/footer.ejs") %>
