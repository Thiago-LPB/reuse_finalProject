<%- include("partials/headerLogin.ejs")  %>
        <!-- Header-->
        <header class="bg-dark py-5">
            <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel" >
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="images/snake.jpg" class="d-block w-100" alt="snake" style="object-fit:contain;width:500px;height:400px">
                </div>
                <div class="carousel-item">
                  <img src="images/pong.png" class="d-block w-100" alt="pong" style="object-fit:contain;width:500px;height:400px">
                </div>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </header>
        <!-- Section-->
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <img class="card-img-top" src="images/snake.jpg" alt="snake" style="height:165px"/>
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder productName">Snake</h5>
                                    <!-- Product price-->
                                    <div class="price">$5</div>
                                </div>
                            </div>
                            
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <form method="post" action="/putCart">
                                        <input type="hidden" name="price"value="5" >
                                        <input type="hidden" name="name" value="Snake">
                                        <input type="hidden" name="img"  value="images/snake.jpg">
                                        <input type="hidden" name="loggedUser" value ="<%= User %>">
                                        <input type="submit" class="btn btn-outline-dark mt-auto" name="add" value="Add to cart">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Sale badge-->
                            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                            <!-- Product image-->
                            <img class="card-img-top" src="images/pong.png" alt="ponggame" style="height:165px" />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder productName" >Pong</h5>
                                    <!-- Product reviews
                                    <div class="d-flex justify-content-center small text-warning mb-2">
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                    </div>-->
                                    <!-- Product price-->
                                    
                                    <div class="price">$3</div>
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <form method="post" action="/putCart">
                                    <input type="hidden" name="price" value="2">
                                    <input type="hidden" name="name" value="Pong">
                                    <input type="hidden" name="img"  value="images/pong.png">
                                    <input type="hidden" name="loggedUser" value ="<%= User %>">
                                    <input type="submit" class="btn btn-outline-dark mt-auto" name="add" value="Add to cart">
                                </form>
                            </div>
                        </div>
                    </div>
                        </div>
                    </div>
                </section>

