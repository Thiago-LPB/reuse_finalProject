<% if (User) { %>
  <%- include("partials/headerLogin.ejs") %>
<% } else { %>
  <%- include("partials/header.ejs") %>
<% } %>

<!-- Search and Filter Section -->
<section class="py-3 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <form action="/games" method="GET" class="mb-3">
          <div class="input-group">
            <input type="text" class="form-control" name="search" placeholder="Search games..." value="<%= searchTerm %>">
            <button class="btn btn-primary" type="submit">
              <i class="bi bi-search"></i> Search
            </button>
          </div>
        </form>
      </div>
      <div class="col-md-6">
        <form action="/games" method="GET">
          <div class="input-group">
            <select class="form-select" name="category" onchange="this.form.submit()">
              <option value="">All Categories</option>
              <% categories.forEach(cat => { %>
                <option value="<%= cat.name %>" <%= currentCategory === cat.name ? 'selected' : '' %>>
                  <%= cat.name %> (<%= cat.game_count %>)
                </option>
              <% }) %>
            </select>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<!-- Games Grid -->
<section class="py-5">
  <div class="container px-4 px-lg-5">
    <h2 class="fw-bolder mb-4">
      <% if (searchTerm) { %>
        Search Results for "<%= searchTerm %>"
      <% } else if (currentCategory) { %>
        <%= currentCategory %> Games
      <% } else { %>
        All Games
      <% } %>
      <span class="badge bg-secondary"><%= games.length %></span>
    </h2>
    
    <% if (games.length === 0) { %>
      <div class="alert alert-info">No games found. Try a different search or category.</div>
    <% } else { %>
      <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-start">
        <% games.forEach(game => { %>
          <div class="col mb-5">
            <div class="card h-100">
              <!-- Product image -->
              <a href="/game/<%= game.id %>">
                <img class="card-img-top" src="/<%= game.img %>" alt="<%= game.name %>" style="height:165px; object-fit: cover;">
              </a>
              
              <!-- Product details -->
              <div class="card-body p-4">
                <div class="text-center">
                  <h5 class="fw-bolder"><%= game.name %></h5>
                  <p class="text-muted small mb-2"><%= game.category || 'Uncategorized' %></p>
                  
                  <!-- Rating -->
                  <% if (game.rating > 0) { %>
                    <% const rating = parseFloat(game.rating); %>
                    <div class="d-flex justify-content-center small text-warning mb-2">
                      <% for(let i = 0; i < Math.floor(rating); i++) { %>
                        <i class="bi-star-fill"></i>
                      <% } %>
                      <% if (rating % 1 !== 0) { %>
                        <i class="bi-star-half"></i>
                      <% } %>
                      <span class="text-muted ms-1">(<%= rating.toFixed(1) %>)</span>
                    </div>
                  <% } %>
                  
                  <!-- Price -->
                  <div class="fw-bold text-primary">$<%= game.price %></div>
                </div>
              </div>
              
              <!-- Product actions -->
              <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                <div class="text-center">
                  <a class="btn btn-outline-primary btn-sm w-100" href="/game/<%= game.id %>">
                    View Details
                  </a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</section>

<%- include("partials/footer.ejs") %>
